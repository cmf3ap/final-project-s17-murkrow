<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cs4720.cs.virginia.edu.hoowantsbrunch">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".WriteReview"
            android:label="Write a Review"
            android:theme="@style/AppTheme.NoActionBar"
            android:parentActivityName="cs4720.cs.virginia.edu.hoowantsbrunch.MainActivity"
        ></activity>
        <activity android:name=".FindRestaurant"
            android:parentActivityName="cs4720.cs.virginia.edu.hoowantsbrunch.MainActivity"
            ></activity>

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyBoM_X2LM_uHLW8mv1QqD9QMXuonkUC8XU" />

        <activity android:name=".ViewRestaurants"
            android:parentActivityName="cs4720.cs.virginia.edu.hoowantsbrunch.MainActivity"
            ></activity>
    </application>

</manifest>