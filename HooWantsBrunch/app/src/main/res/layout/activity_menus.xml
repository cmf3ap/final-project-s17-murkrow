<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cs4720.cs.virginia.edu.hoowantsbrunch.MenusActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/menuToolbar"
        android:layout_width="600dp"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_orange_light"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/AppTheme"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />
        <ImageButton
            android:id="@+id/backMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"
            android:src="@drawable/back"
            android:layout_gravity="left"
            style="?android:attr/borderlessButtonStyle"
            tools:layout_constraintTop_creator="1"
            tools:layout_constraintLeft_creator="1"
            app:layout_constraintLeft_toLeftOf="@+id/menuToolbar"
            app:layout_constraintTop_toTopOf="@+id/menuToolbar" />

    <TextView
        android:id="@+id/choose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/menuToolbar"
        android:layout_below="@+id/menuToolbar"
        android:paddingTop="16dp"
        android:paddingLeft="16dp"
        android:text="Choose a restaurant"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline" />

    <Spinner
        android:id="@+id/menus_spinner"
        android:layout_width="450dp"
        android:layout_height="70dp"
        android:paddingLeft="16dp"
        android:spinnerMode="dialog"
        android:text="Hello"
        android:layout_below="@+id/choose"
        android:layout_alignStart="@+id/choose" />

</RelativeLayout>
